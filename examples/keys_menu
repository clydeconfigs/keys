#!/usr/bin/bash

#
# CC BY-NC-SA 4.0 Deed 
# keys-menu, a work by clyde
#

# example usage: 
# $ bash keys_menu "rofi -dmenu"
# $ bash keys_menu dmenu

menu=$1
test -z $1 && exit 1

main_menu=$(echo -e "try+open\nclose+open" | $menu -p "careful: this will display your logins! select any to continue" -lines 0 || exit 1)

case $main_menu in
    "try+open")
        return;;
    "close+open")
        keys close;;
    *)
        exit 1;;
esac

if ! test -e "/tmp/key_database_$USER"; then
    database_password=$(rofi -dmenu -password -p "enter your database's master key")
    test -z "$database_password" && exit 1

    notify-send "trying to unlock... wait until this is over. if any error, close+open"
    touch "/tmp/keys_menu_pw_$USER"
    chmod 600 "/tmp/keys_menu_pw_$USER"
    echo "$database_password" > "/tmp/keys_menu_pw_$USER"
    keys open "/tmp/keys_menu_pw_$USER" || { 
        notify-send "failure unlocking database, the password is wrong?"
        keys close
        exit 1
    }
fi

entry=$(keys list -l | sed 1d | $menu)

kn=$(echo "$entry" | sed 's/\..*//')
password=$(keys get $kn)
login=$(echo "$entry" | awk '{print $3}')
totp=$(keys totp $kn)

test "$password" == "argument should be a digit" && exit 1

choice=$(echo -e "password\nlogin+password\nlogin\ntotp" | $menu) || exit 1

{
case $choice in
    "login+password")
        for (( i=0; i<${#login}; i++ )); do
            char="${login:$i:1}"
            xdotool type "$char"
        done
        sleep 0.01
        xdotool key Tab
        sleep 0.01
        for (( i=0; i<${#password}; i++ )); do
            char="${password:$i:1}"
            xdotool type "$char"
        done
        ;;
    "password")
        for (( i=0; i<${#password}; i++ )); do
            char="${password:$i:1}"
            xdotool type "$char"
        done
        ;;
    "login")
        for (( i=0; i<${#login}; i++ )); do
            char="${login:$i:1}"
            xdotool type "$char"
        done
        ;;
    "totp")
        for (( i=0; i<${#totp}; i++ )); do
            char="${totp:$i:1}"
            xdotool type "$char"
        done
        ;;
esac

notify-send "done typing, you may press enter"

} &


